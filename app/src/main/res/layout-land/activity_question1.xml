<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question1">

    <TextView
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="@color/Blue"
        android:text="@string/progress"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/progressTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/progress"
        android:textColor="@color/Blue"
        android:textSize="25sp"
        android:text="@string/progresstotal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="65dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_marginStart="50dp"
        android:maxWidth="300dp"
        android:text="@string/Question1"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/Q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="450dp"
        android:layout_marginTop="125dp"
        android:gravity="center"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/Q1C1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:minWidth="150dp"
            android:text="@string/Q1C1"
            android:background="@drawable/radio_color"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/Q1C2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:minWidth="150dp"
            android:text="@string/Q1C2"
            android:background="@drawable/radio_color"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/Q1C3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:minWidth="150dp"
            android:text="@string/Q1C3"
            android:background="@drawable/radio_color"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/Q1C4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:minWidth="150dp"
            android:text="@string/Q1C4"
            android:background="@drawable/radio_color"
            android:textAlignment="center" />
    </RadioGroup>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:text="@string/submitButton" />

</RelativeLayout>